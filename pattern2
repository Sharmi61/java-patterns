public class pattern2 {
	public static void main(String args[]){
		int n=5,i,j,r,m=2,f=1;
		for(i=1;i<=n;i++){
			for(j=n-i;j>0;j--){
				System.out.print(" ");
			}if(i==1)System.out.print("1");
			else{
				for(r=1;r<i+m;r++){
					if(r<=m)
					System.out.print(r);
					else{
						System.out.print(m-f);
						f++;
					}
				}m++;f=1;
				
			}System.out.println();
		}
	}

}
/*  1
   121
  12321
 1234321
123454321*/
