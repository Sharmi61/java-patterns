public class pattern7 {
	public static void main(String args[]){
		int n=5,i,j,r,m=2,x=3,y=0;;
		for(i=1;i<n;i++){
			for(j=n-i;j>0;j--){
				System.out.print(" ");
			}if(i==1)System.out.print("1");
			else{int f=i;
				for(r=1;r<i+m;r++){
					
					if(f<=x)
					{System.out.print(f);
					f++;
					 y=f-1;}
					else{--y;
						System.out.print(y);}
				}m++;x=x+2;
				
			}System.out.println();
		}
	}

}
